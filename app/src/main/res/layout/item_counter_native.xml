<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/bg_card_dark"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/border_dark"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Color tag, Label, Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Color Tag Indicator -->
            <View
                android:id="@+id/colorTagIndicator"
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:background="@color/tag_gray" />

            <!-- Label -->
            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Counter"
                android:textColor="@color/text_primary_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Lock Icon -->
            <ImageView
                android:id="@+id/ivLocked"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_lock"
                android:tint="@color/text_muted_dark"
                android:visibility="gone" />

            <!-- Category Badge -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Category"
                android:textColor="@color/text_secondary_dark"
                android:textSize="10sp"
                android:visibility="gone" />

            <!-- Drag Handle -->
            <ImageView
                android:id="@+id/ivDragHandle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_drag_handle"
                android:tint="@color/text_muted_dark"
                android:contentDescription="Drag" />

            <!-- More Menu -->
            <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:tint="@color/text_secondary_dark"
                android:contentDescription="Menu" />
        </LinearLayout>

        <!-- Target Progress Bar (shown when target > 0) -->
        <LinearLayout
            android:id="@+id/targetProgressContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target:"
                    android:textColor="@color/text_muted_dark"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tvTargetValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="0/100"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvTargetPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/color_good"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressTarget"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="4dp"
                android:progressDrawable="@drawable/progress_bar_custom"
                android:progress="0"
                android:max="100" />
        </LinearLayout>

        <!-- Counter Value -->
        <TextView
            android:id="@+id/tvValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/text_primary_dark"
            android:textSize="56sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            tools:text="1234" />

        <!-- Step Info -->
        <TextView
            android:id="@+id/tvStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Step: 1"
            android:textColor="@color/text_muted_dark"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Timer/Stopwatch Display -->
        <LinearLayout
            android:id="@+id/addonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvAddonTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="@color/accent"
                android:textSize="24sp"
                android:fontFamily="monospace" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageButton
                    android:id="@+id/btnAddonPlay"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/bg_circle_button"
                    android:src="@drawable/ic_play"
                    android:tint="@color/color_good"
                    android:padding="8dp" />

                <ImageButton
                    android:id="@+id/btnAddonPause"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_circle_button"
                    android:src="@drawable/ic_pause"
                    android:tint="@color/tag_orange"
                    android:padding="8dp"
                    android:visibility="gone" />

                <ImageButton
                    android:id="@+id/btnAddonReset"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_circle_button"
                    android:src="@drawable/ic_reset"
                    android:tint="@color/text_secondary_dark"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Notes Section -->
        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:background="@drawable/bg_notes"
            android:text="Notes here..."
            android:textColor="@color/text_secondary_dark"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Button Row: -, Reset, + -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Minus Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="âˆ’"
                android:textSize="28sp"
                android:textColor="@color/color_bad"
                app:strokeColor="@color/btn_minus_border"
                app:backgroundTint="@color/btn_minus_bg"
                app:cornerRadius="12dp" />

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="8dp"
                app:icon="@drawable/ic_reset"
                app:iconSize="20dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:strokeColor="@color/border_dark"
                app:cornerRadius="12dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <!-- Plus Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="28sp"
                android:textColor="@color/color_good"
                app:strokeColor="@color/btn_plus_border"
                app:backgroundTint="@color/btn_plus_bg"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
