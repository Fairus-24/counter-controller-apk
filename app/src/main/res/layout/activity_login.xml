<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d1117"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Logo/Icon -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="App Logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Counter Board"
        android:textColor="#ffffff"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Digital Counter App"
        android:textColor="#8b949e"
        android:textSize="14sp"/>

    <!-- Login Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="vertical">

        <!-- Google Sign In -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Masuk dengan Google"
            android:textColor="#000000"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="#ffffff"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            app:iconTint="@null"/>

        <!-- Email Sign In -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEmailSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Masuk dengan Email"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="#238636"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_email"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            app:iconTint="#ffffff"/>

        <!-- Phone Sign In -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPhoneSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Masuk dengan Nomor HP"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="#1f6feb"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_phone"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconSize="24dp"
            app:iconTint="#ffffff"/>

        <!-- Skip/Guest -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="Lewati, Gunakan Tanpa Login"
            android:textColor="#8b949e"
            android:textAllCaps="false"
            android:textSize="14sp"/>

    </LinearLayout>

    <!-- Version -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="versi 1.00.0001"
        android:textColor="#6e7681"
        android:textSize="12sp"/>

</LinearLayout>
